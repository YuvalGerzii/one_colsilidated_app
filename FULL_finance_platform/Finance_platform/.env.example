# ============================================
# DOCKER COMPOSE ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and update with your actual values
# Never commit the .env file to version control

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=change_me_super_secret_key_in_production

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_DB=portfolio_dashboard
POSTGRES_USER=portfolio_user
POSTGRES_PASSWORD=portfolio_password
POSTGRES_PORT=5432

# ============================================
# PGADMIN - Database Administration
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# REDIS - Caching
# ============================================
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# ============================================
# RABBITMQ - Message Queue
# ============================================
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq_password
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ============================================
# WEAVIATE - Vector Database
# ============================================
WEAVIATE_PORT=8082

# ============================================
# PROMETHEUS - Metrics
# ============================================
PROMETHEUS_PORT=9090

# ============================================
# GRAFANA - Monitoring Dashboards
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3001
GRAFANA_INSTALL_PLUGINS=

# ============================================
# APPLICATION SERVICES
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
VITE_API_URL=/api/v1

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8081"]

# ============================================
# NOTES
# ============================================
# Port Mapping Summary:
# - 80    : Traefik HTTP
# - 443   : Traefik HTTPS
# - 3000  : Frontend Application
# - 3001  : Grafana Dashboard
# - 5050  : PgAdmin Web UI
# - 5432  : PostgreSQL Database
# - 5672  : RabbitMQ AMQP
# - 6379  : Redis
# - 8000  : Backend API
# - 8080  : Traefik Dashboard
# - 8081  : Nginx
# - 8082  : Weaviate API
# - 9090  : Prometheus
# - 15672 : RabbitMQ Management UI
#
# Access URLs (when running):
# - Frontend:            http://localhost:3000
# - Backend API:         http://localhost:8000
# - Traefik Dashboard:   http://localhost:8080
# - Nginx:               http://localhost:8081
# - PgAdmin:             http://localhost:5050
# - Grafana:             http://localhost:3001
# - Prometheus:          http://localhost:9090
# - RabbitMQ Management: http://localhost:15672
# - Weaviate:            http://localhost:8082
