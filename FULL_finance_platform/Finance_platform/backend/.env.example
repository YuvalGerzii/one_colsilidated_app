# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Portfolio Dashboard API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://portfolio_user:password@localhost:5432/portfolio_dashboard

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================
# MARKET DATA API KEYS
# ============================================

# CoStar API
# Get your API key from: https://www.costar.com/about/costar-real-estate-manager/api
COSTAR_API_KEY=your-costar-api-key-here

# Zillow API (via RapidAPI)
# Get your API key from: https://rapidapi.com/apimaker/api/zillow-com1
ZILLOW_API_KEY=your-zillow-api-key-here

# Redfin API (optional - if using separate service)
REDFIN_API_KEY=your-redfin-api-key-here

# U.S. Census API
# Get your free API key from: https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=your-census-api-key-here

# Walk Score API
# Get your API key from: https://www.walkscore.com/professional/walk-score-apis.php
WALKSCORE_API_KEY=your-walkscore-api-key-here

# ============================================
# FINANCIAL DATASETS MCP SERVER
# ============================================
# For MCP server integration (stock market data)
# Get your API key from: https://www.financialdatasets.ai/
FINANCIAL_DATASETS_API_KEY=your-financial-datasets-api-key-here

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# AWS Configuration (for production deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# ============================================
# API RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_MARKET_DATA=true
ENABLE_PDF_EXTRACTION=true
ENABLE_MODEL_GENERATION=true

# ============================================
# NOTES
# ============================================
# - Never commit the actual .env file to version control
# - Keep API keys secure and rotate them regularly
# - Use different keys for development and production
# - Some APIs have free tiers with usage limits
# - Census API is free and doesn't require a key for basic access
