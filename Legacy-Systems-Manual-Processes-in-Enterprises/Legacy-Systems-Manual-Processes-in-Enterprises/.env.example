# Application
APP_NAME=Enterprise AI Modernization Suite
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://enterprise_user:enterprise_pass@postgres:5432/enterprise_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Vector Database (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=enterprise_vectors

# Graph Database (Neo4j)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=enterprise_pass

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=enterprise_ai

# MinIO (Object Storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=enterprise-ai-storage
MINIO_SECURE=false

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/
CELERY_BROKER_URL=amqp://admin:admin@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ==========================================
# LOCAL LLM CONFIGURATION (100% FREE!)
# ==========================================
# No API keys required! Uses Ollama for local AI inference

# Ollama Configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# LLM Mode: "local" (FREE) or "api" (requires paid keys below)
LLM_MODE=local

# ==========================================
# LEGACY API CONFIGURATION (OPTIONAL - NOT USED IN LOCAL MODE)
# ==========================================
# These are NOT required when using local LLMs
# Leave empty to use 100% free local models

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

COHERE_API_KEY=
HUGGINGFACE_API_KEY=

# AI Configuration
MAX_TOKENS=4000
TEMPERATURE=0.7
AI_TIMEOUT=300
EMBEDDING_DIMENSION=768

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=30 days

# Enterprise Automation Fabric
EAF_ENABLED=true
EAF_MAX_CONCURRENT_AGENTS=10
EAF_AGENT_TIMEOUT=600
EAF_UI_AUTOMATION_ENABLED=true

# Legacy Migrator
MIGRATOR_SUPPORTED_LANGUAGES=["cobol", "fortran", "abap", "as400", "pl1"]
MIGRATOR_TARGET_LANGUAGES=["python", "java", "javascript", "typescript"]
MIGRATOR_MAX_FILE_SIZE_MB=100

# Process Miner
PROCESS_MINER_ENABLED=true
PROCESS_MINER_MIN_PATTERN_FREQUENCY=3
PROCESS_MINER_MAX_DEPTH=10

# Document OS
DOCUMENT_OS_ENABLED=true
DOCUMENT_OS_MAX_FILE_SIZE_MB=50
DOCUMENT_OS_SUPPORTED_FORMATS=["pdf", "docx", "xlsx", "pptx", "txt", "csv"]
DOCUMENT_OS_OCR_ENABLED=true
TESSERACT_PATH=/usr/bin/tesseract

# Governance Framework
GOVERNANCE_ENABLED=true
GOVERNANCE_COMPLIANCE_STANDARDS=["SOC2", "ISO27001", "GDPR", "HIPAA"]
GOVERNANCE_AUTO_AUDIT=true

# Company Brain
COMPANY_BRAIN_ENABLED=true
COMPANY_BRAIN_MAX_CONTEXT_SIZE=10000
COMPANY_BRAIN_UPDATE_FREQUENCY=hourly

# Human-in-the-Loop
HITL_ENABLED=true
HITL_DEFAULT_APPROVAL_TIMEOUT=24h
HITL_CONFIDENCE_THRESHOLD=0.85
HITL_ESCALATION_ENABLED=true

# Infrastructure Orchestrator
INFRA_ORCHESTRATOR_ENABLED=true
INFRA_AUTO_SCALING=true
INFRA_COST_OPTIMIZATION=true
INFRA_CHAOS_TESTING=false

# Agentic Operations
AGENTS_ENABLED=true
AGENTS_MAX_CONCURRENT=20
AGENTS_DEFAULT_TIMEOUT=3600
AGENTS_COLLABORATION_ENABLED=true

# Risk Radar
RISK_RADAR_ENABLED=true
RISK_RADAR_SCAN_FREQUENCY=15m
RISK_RADAR_ANOMALY_THRESHOLD=0.75
RISK_RADAR_ALERT_CHANNELS=["email", "slack", "webhook"]

# Cloud Providers (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

AZURE_SUBSCRIPTION_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY_PATH=

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@enterprise-ai-suite.com

# Slack Integration
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5

# Performance
MAX_REQUEST_SIZE_MB=100
REQUEST_TIMEOUT=300
WORKER_TIMEOUT=600
KEEPALIVE_TIMEOUT=5

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_PROCESSING=true
FEATURE_MULTI_TENANT=false
FEATURE_EDGE_DEPLOYMENT=false
