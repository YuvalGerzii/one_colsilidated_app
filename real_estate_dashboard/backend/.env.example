# Application Settings
APP_NAME="Real Estate Dashboard"
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/real_estate_dashboard
DB_ECHO=False

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=True
CACHE_DEFAULT_TTL=1800

# LLM Configuration (Local Ollama)
ENABLE_LLM=True
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma:2b
LLM_TIMEOUT=30
LLM_MAX_RETRIES=2
LLM_CACHE_TTL=3600
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Economics API Configuration (Sugra AI)
ECONOMICS_API_BASE_URL=https://api.sugra.ai
ECONOMICS_API_KEY=your_api_key_here
ENABLE_ECONOMICS_API=True
