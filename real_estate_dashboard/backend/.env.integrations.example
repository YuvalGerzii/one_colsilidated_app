# ====================================
# THIRD-PARTY INTEGRATIONS
# ====================================
# Configure API keys for third-party services
# Only configure the integrations you plan to use
# Missing API keys will be gracefully skipped

# ====================================
# INTEGRATION FEATURE FLAGS
# ====================================
ENABLE_INTEGRATIONS=True

# Enable specific integration categories
ENABLE_CENSUS_INTEGRATION=True
ENABLE_BLS_INTEGRATION=True
ENABLE_FRED_INTEGRATION=True
ENABLE_ATTOM_INTEGRATION=False
ENABLE_REALTOR_INTEGRATION=False
ENABLE_PLAID_INTEGRATION=False
ENABLE_STRIPE_INTEGRATION=False
ENABLE_SLACK_INTEGRATION=False
ENABLE_GOOGLE_DRIVE_INTEGRATION=False

# ====================================
# MARKET DATA INTEGRATIONS (FREE)
# ====================================

# U.S. Census Bureau API
# FREE - Optional API key (increases rate limits)
# Get key: https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=

# Bureau of Labor Statistics (BLS) API
# FREE - Optional API key (increases daily limit from 25 to 500 queries)
# Get key: https://data.bls.gov/registrationEngine/
BLS_API_KEY=

# Federal Reserve Economic Data (FRED) API
# FREE - Required for FRED integration
# Get key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=

# ====================================
# PROPERTY DATA INTEGRATIONS
# ====================================

# ATTOM Data Solutions API
# PAID - Free trial available, then $49+/month
# Get key: https://api.developer.attomdata.com/
ATTOM_API_KEY=

# Realtor.com API (via RapidAPI)
# FREEMIUM - 500 requests/month free tier
# Get key: https://rapidapi.com/apidojo/api/realtor/
REALTOR_RAPIDAPI_KEY=

# ====================================
# BANKING & PAYMENT INTEGRATIONS
# ====================================

# Plaid API (Bank Account Linking)
# FREE - Sandbox environment for development
# Get credentials: https://dashboard.plaid.com/
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# Stripe API (Payment Processing)
# FREE - Test mode (production charges transaction fees)
# Get key: https://dashboard.stripe.com/apikeys
# Use test key (sk_test_...) for development
STRIPE_API_KEY=

# ====================================
# TOOLS & AUTOMATION (FREE)
# ====================================

# Slack Bot Token
# FREE - Create a Slack app to get token
# Get token: https://api.slack.com/apps
SLACK_BOT_TOKEN=

# Google Drive API
# FREE - 15GB storage
# Get OAuth2 credentials: https://console.cloud.google.com/
GOOGLE_DRIVE_ACCESS_TOKEN=

# ====================================
# OFFICIAL GOVERNMENT DATA (FREE)
# ====================================

# US Data.gov - No API key required
ENABLE_DATAGOV_US_INTEGRATION=True

# Israeli Data.gov - No API key required
ENABLE_DATAGOV_IL_INTEGRATION=True

# Bank of Israel - No API key required
ENABLE_BANK_OF_ISRAEL_INTEGRATION=True

# HUD (Housing & Urban Development) - No API key required
ENABLE_HUD_INTEGRATION=True

# FHFA (Federal Housing Finance Agency) - No API key required
ENABLE_FHFA_INTEGRATION=True

# ====================================
# INTEGRATION NOTES
# ====================================
#
# Completely FREE integrations (no API key needed):
# - Data.gov US (300,000+ datasets)
# - Data.gov IL (Israeli government data)
# - Bank of Israel (economic indicators)
# - HUD (Fair Market Rents, income limits)
# - FHFA (House Price Index)
# - Census Bureau (optional API key for higher limits)
# - BLS (optional API key for higher limits)
#
# FREE with API key:
# - FRED (free API key required)
# - Slack (free app creation)
# - Google Drive (free with OAuth)
# - Plaid (sandbox environment)
# - Stripe (test mode)
#
# Paid/Limited integrations:
# - ATTOM Data: Free trial, then paid
# - Realtor.com: 500 requests/month free
#
# To use integrations:
# 1. Set ENABLE_[INTEGRATION]_INTEGRATION=True
# 2. Add the required API key(s) if needed
# 3. Restart the backend server
# 4. Check integration status at /api/v1/integrations/status
#
